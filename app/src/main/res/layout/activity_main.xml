<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#5B673AB7"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Amaizing Calculator!"
        android:textStyle="bold|italic"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/number1"
        android:hint="Enter number 1"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/number2"
        android:hint="Enter number 2"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="+"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#FF5722"

            />
        <Button
            android:id="@+id/btn_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="-"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#FF5722"


            />
        <Button
            android:id="@+id/btn_mul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="x"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#FF5722"

            />
        <Button
            android:id="@+id/btn_div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="/"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#FF5722"
            >

        </Button>


    </LinearLayout>


    <Button
        android:id="@+id/btn_ecl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="="
        android:backgroundTint="#4CAF50"
        android:textSize="40sp"
        android:layout_marginTop="20dp">

    </Button>

    <TextView
        android:id="@+id/text_ans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="The Answer:"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold">

    </TextView>



    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textStyle="bold">

    </TextView>


    <TextView
        android:id="@+id/tx_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:text="The Last Answer Was:"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp">

    </TextView>


    <TextView
        android:id="@+id/last_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:textStyle="bold">

    </TextView>



</LinearLayout>
